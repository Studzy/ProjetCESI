@using ProjetCESI.Web.Models
@model UserViewModel

@{ 
    ViewData["Title"] = "AnonymeUser";
}


<div class="jumbotron">
    <h1>Êtes-vous sûr de vouloir supprimer cet utilisateur ?</h1>

    <dl class="row">
        <dd hidden class="col-sm-10">
            @Html.DisplayFor(model => model.Utilisateur.Id)
        </dd>
        <dd class="col-sm-10">
            <label><font size="5">Utilisateur sélectionné : <font size="5" color="red">@Html.DisplayFor(model => model.Utilisateur.UserName)</font></font></label>
        </dd>
    </dl>
    <br />
    <form method="post" asp-action="Anonymise">
        <input hidden type="text" value="@Model.Utilisateur.Id" name="Id" />
        <input type="submit" value="Supprimer l'utilisateur" class="btn btn-danger" />
        <br />
        <br />
        <br />
        <br />
        <a href="/Gestion?NomVue=UserList">Retour</a>
    </form>
</div>