@using ProjetCESI.Web.Models
@model RessourceViewModel

@{
    ViewData["Title"] = Model.Ressource.Titre;
}

<div>
    <div class="ressource-header justify-content-between">
        <h3 class="title">@Model.Ressource.Titre</h3>
        <div class="ressource-button">
            <span class="favoris"><img id="favoris" src="~/images/003-star.svg" style="width: 32px;"/></span>
            <span class="cote"><img id="cote" src="~/images/001-clock.svg" style="width: 32px;" /></span>
            <span class="exploite"><img id="exploite" src="~/images/002-check.svg" style="width: 32px;" /></span>
        </div>
    </div>
    <span class="badge badge-pill badge-primary">@Html.DisplayFor(c => c.Ressource.Categorie.Nom)</span>
    <span class="badge badge-pill badge-secondary">@Html.DisplayFor(c => c.Ressource.TypeRessource.Nom)</span>
    @foreach (var relation in Model.Ressource.TypeRelationsRessources)
    {
        <span class="badge badge-pill badge-success">@Html.DisplayFor(c => relation.TypeRelation.Nom)</span>
    }
</div>


<div>
    @Html.Raw(Model.Ressource.Contenu)
</div>

<div class="comment-section">
    <h2>Commentaires</h2>
    <div id="response-editor">
        <form id="ajout-commentaire">
            <textarea id="Contenu" class="commentaire-editor" placeholder="Ajouter un commentaire..." rows="1"></textarea>
        </form>
        <div id="submit-btn">
            <div class="d-flex justify-content-end">
                <button id="annuler-commentaire">Annuler</button>
                <button form="ajout-commentaire">Envoyer</button>
            </div>
        </div>
    </div>
    <div id="list-commentaire">

    </div>
</div>

@section Scripts {
<script src="~/lib/autosize/dist/autosize.min.js"></script>
<script>
    $(document).ready(function () {
        document.getElementById('submit-btn').style.display = 'none';
        document.getElementById("favoris").addEventListener("mouseover", mouseHover(this));
        getComments();
        autosize(document.querySelector('.commentaire-editor'));
        $('.commentaire-editor').focusin(function () {
            document.getElementById('submit-btn').style.display = 'initial';
        });
        $('#annuler-commentaire').click(function () {
            resetEditor(document.querySelector('.commentaire-editor'));
            document.getElementById('submit-btn').style.display = 'none';
        });
        $('#ajout-commentaire').submit(function (event) {
            event.preventDefault();
            var data = $(this).serialize();

            $.ajax({
                url: "/Commentaire/AjouterCommentaire",
                method: "POST",
                data: {
                    'Commentaire.Texte': $('#Contenu').val() 
                }
            })
                .done();
        });
    });

    function mouseHover(item) {
        console.log(item.src);
    }

    function getComments() {
        $.ajax({
            url: "/Commentaire/GetCommentaires",
            method: "GET",
            data: {
                ressourceId: @Model.Ressource.Id,
            }
        })
            .done(function (result) {
                document.getElementById("list-commentaire").innerHTML = document.getElementById("list-commentaire").innerHTML + result;
            });
    }
</script>
}