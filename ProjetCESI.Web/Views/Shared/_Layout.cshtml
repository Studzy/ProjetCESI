<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetCESI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="box-shadow">
        <div class="container">
            <div class="d-flex justify-content-between">
                <a class="navbar-brand" asp-area="" asp-controller="Accueil" asp-action="Accueil">
                    <img src="~/images/Icone.png" width="150" height="150" alt="" loading="lazy">
                </a>
                <div class="header__widgets header__item widgets__items" style="width: 47%;">
                    <div class="widgets__inner">
                        <div class="header__recherche widgets__item">
                            <div class="formulaire_spip formulaire_recherche form-search" id="formulaire_recherche">
                                <form action="#" method="get">
                                    <div>
                                        <input name="page" value="recherche" type="hidden">
                                        <div class="input-append">
                                            <input type="text" class="search text search-query" name="recherche" id="recherche" accesskey="4" autocapitalize="off" autocorrect="off" placeholder="Rechercher">
                                            <button type="submit" class="btn" title="Rechercher"><img src="~/images/magnifier.png" style="width: 12px;"/></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="header__menu widgets__item">
                            <a class="collapsed" data-toggle="collapse" data-target=".nav-collapse" title="Montrer le menu">
                                <i class="picto picto-menu"></i>
                            </a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Accueil" asp-action="Accueil">ProjetCESI</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Accueil" asp-action="Accueil">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Accueil" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOff">Se déconnecter</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Se connecter</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - ProjetCESI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
