@using ProjetCESI.Web.Models;

@model RegisterViewModel

@{
    ViewData["Title"] = "Inscription";
}

<div class="row">
    @using (Html.BeginForm("Register", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, true, htmlAttributes: new { @id = "formLoginAccount", @class = "login-form col-9", @data_login_form = "true" }))
    {
        <div>
            <div asp-validation-summary="ModelOnly"></div>
        </div>
        <div class="login-form__input Espace-form">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Votre nom d'utilisateur" })
            @Html.ValidationMessageFor(m => m.Username)
            <i class="fa fa-user inputIcon"></i>
        </div>
        <div class="login-form__input Espace-form">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Votre email" })
            @Html.ValidationMessageFor(m => m.Email)
            <i class="fa fa-user inputIcon"></i>
        </div>
        <div class="login-form__input Espace-form">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mot de passe" })
            @Html.ValidationMessageFor(m => m.Password)
            <i class="fa fa-unlock-alt inputIcon"></i>
        </div>
        <div class="login-form__input Espace-form">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmer le mot de passe" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
            <i class="fa fa-unlock-alt inputIcon"></i>
        </div>
        <div class="login-form__input Espace-form">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Prénom" })
            @Html.ValidationMessageFor(m => m.FirstName)
            <i class="fa fa-unlock-alt inputIcon"></i>
        </div>
        <div class="login-form__input Espace-form">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Nom" })
            @Html.ValidationMessageFor(m => m.LastName)
            <i class="fa fa-unlock-alt inputIcon"></i>
        </div>
        <button id="btnValidation" style="position:relative" class="btn--henrri btn--primary btn--block text--center loaderPage login-form__submit btn btn-success Espace-form" data-left-position="30px" type="submit">
            <span class="text--center">S'inscrire</span>
        </button>
    }
    <div class="col-3 border border-dark" style="border-radius: 5px; height: 100%; background-color: #bababa; padding: 1%; margin-top: 0.75%">
        <ul>
            <li>
                <small class="align-middle">Pas de caractères spéciaux dans le nom d'utilisateur.</small>
            </li>
            <li>
                <small class="align-middle">L'email ne doit pas déjà être utilisé pour un autre compte.</small>
            </li>
            <li>
                <small class="align-middle">Le mot de passe doit contenir au minimum une lettre majuscule et une lettre minuscule, un chiffre, un caractère spécial (*.!@@$%^&(){}[]:;<>,.?/~_+-=|\) et faire 8 caractères minimum.</small>
            </li>
        </ul>
    </div>
</div>
