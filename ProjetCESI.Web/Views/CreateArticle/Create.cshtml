@using ProjetCESI.Web.Models;
@model CreateRessourceViewModel

<h1>Création d'un article</h1>

@using (Html.BeginForm("Upload",
                          "CreateArticle",
                          FormMethod.Post,
                          new { enctype = "multipart/form-data" }))
{
    <div class="form-row">
        <div class="form-group col-md-4">
            @*<strong>@Html.LabelFor(c => c.SelectedCategories, "Categories")</strong>*@
            <select data-placeholder="Sélectionnez une catégorie..." class="chosen-select form-control" name="SelectedCategories" tabindex="1">
                <option value=""></option>
                @foreach (var categorie in ViewBag.Categories)
                {
                    <option value="@categorie.Value">@categorie.Text</option>
                }
            </select>
        </div>
        <div class="form-group col-md-4">
            @*<strong>@Html.LabelFor(c => c.SelectedTypeRessources, "Type de resssources")</strong>*@
            <select id="TypeRessource" data-placeholder="Sélectionnez un type de ressource..." class="chosen-select form-control" name="SelectedTypeRessources" tabindex="3" onchange="MajFormulaire()">
                <option value=""></option>
                @foreach (var TypeRessource in ViewBag.TypeRessources)
                {
                    <option value="@TypeRessource.Value">@TypeRessource.Text</option>
                }
            </select>
        </div>
        <div class="form-group col-md-4">
            @*<strong>@Html.LabelFor(c => c.SelectedTypeRelation, "Type de relation")</strong>*@
            <select data-placeholder="Sélectionnez des types de relations..." class="chosen-select form-control" name="SelectedTypeRelation" multiple tabindex="2">
                <option value=""></option>
                @foreach (var TypeRelation in ViewBag.TypeRelation)
                {
                    <option value="@TypeRelation.Value">@TypeRelation.Text</option>
                }
            </select>
        </div>
    </div>
    <div style="position: relative; float: right;">
        <button class=pull-right name="modifParam">Paramètre</button>
    </div>
    <br />
    <p>
        Titre :
        <input type="text" id="TitreArticle" name="Titre" />
    </p>

    <br />

    <div id="formulaire">
        <textarea name="Contenu" id="editor"></textarea>
    </div>
    <div id="video" hidden>
        <p>
            URL de la vidéo :
        </p>
        <input type="url" id="urlVideo" name="urlVideo" />
        <br />
        <br />
        <p>Le site ne prend en compte que les vidéo vennants de Youtube et Dailymotion</p>
    </div>
    <div id="pdf" hidden>
        <h3>Selectionnez un fichier</h3>
        <label for="file">Upload Image:</label>
        <input type="file" name="file" id="file" /><br><br>
        <br><br>
        @ViewBag.Message
    </div>

    <br />
    <center><button type="submit" id="btnValiderArticle" hidden>Valider mon article</button></center>
}

@section Scripts
{
    <script>

        $(document).ready(function () {
            JoliEditeur();
        })

        function MajFormulaire() {

            var selectElmt = document.getElementById("TypeRessource");
            var valeurselectionnee = selectElmt.options[selectElmt.selectedIndex].value;

            if (valeurselectionnee == 4) {
                document.getElementById("pdf").removeAttribute('hidden');
                document.getElementById("formulaire").setAttribute('hidden', 'hidden');
                document.getElementById("video").setAttribute('hidden', 'hidden');
            }
            else if (valeurselectionnee == 8) {
                document.getElementById("video").removeAttribute('hidden');
                document.getElementById("pdf").setAttribute('hidden', 'hidden');
                document.getElementById("formulaire").setAttribute('hidden', 'hidden');
            }
            else {
                document.getElementById("formulaire").removeAttribute('hidden');
                document.getElementById("video").setAttribute('hidden', 'hidden');
                document.getElementById("pdf").setAttribute('hidden', 'hidden');
            }

            if (valeurselectionnee != 0) {
                document.getElementById("btnValiderArticle").removeAttribute('hidden');
            }
        }
    </script>
    <script src='~/lib/tinymce/tinymce.min.js'></script>
    <script type="text/javascript">

        function JoliEditeur() {

            tinymce.init({
                selector: 'textarea#editor',
                plugins: 'print preview paste importcss searchreplace autolink autosave save directionality code visualblocks visualchars fullscreen image link media template codesample table charmap hr pagebreak nonbreaking anchor toc insertdatetime advlist lists wordcount imagetools textpattern noneditable help charmap quickbars emoticons',
                imagetools_cors_hosts: ['picsum.photos'],
                menubar: 'file edit view insert format tools table help',
                toolbar: 'undo redo | bold italic underline strikethrough | fontselect fontsizeselect formatselect | alignleft aligncenter alignright alignjustify | outdent indent |  numlist bullist | forecolor backcolor removeformat | pagebreak | charmap emoticons | fullscreen  preview save print | insertfile image media template link anchor codesample | ltr rtl',
                toolbar_sticky: true,
                autosave_ask_before_unload: true,
                autosave_interval: "30s",
                autosave_prefix: "{path}{query}-{id}-",
                autosave_restore_when_empty: false,
                autosave_retention: "2m",
                image_advtab: true,
                link_list: [
                    { title: 'My page 1', value: 'https://www.codexworld.com' },
                    { title: 'My page 2', value: 'https://www.xwebtools.com' }
                ],
                image_list: [
                    { title: 'My page 1', value: 'https://www.codexworld.com' },
                    { title: 'My page 2', value: 'https://www.xwebtools.com' }
                ],
                image_class_list: [
                    { title: 'None', value: '' },
                    { title: 'Some class', value: 'class-name' }
                ],
                importcss_append: true,
                file_picker_callback: function (callback, value, meta) {
                    if (meta.filetype === 'file') {
                        callback('https://www.google.com/logos/google.jpg', { text: 'My text' });
                    }

                    if (meta.filetype === 'image') {
                        callback('https://www.google.com/logos/google.jpg', { alt: 'My alt text' });
                    }

                    if (meta.filetype === 'media') {
                        callback('movie.mp4', { source2: 'alt.ogg', poster: 'https://www.google.com/logos/google.jpg' });
                    }
                },
                templates: [
                    { title: 'New Table', description: 'creates a new table', content: '<div class="mceTmpl"><table width="98%%"  border="0" cellspacing="0" cellpadding="0"><tr><th scope="col"> </th><th scope="col"> </th></tr><tr><td> </td><td> </td></tr></table></div>' },
                    { title: 'Starting my story', description: 'A cure for writers block', content: 'Once upon a time...' },
                    { title: 'New list with dates', description: 'New List with dates', content: '<div class="mceTmpl"><span class="cdate">cdate</span><br /><span class="mdate">mdate</span><h2>My List</h2><ul><li></li><li></li></ul></div>' }
                ],
                template_cdate_format: '[Date Created (CDATE): %m/%d/%Y : %H:%M:%S]',
                template_mdate_format: '[Date Modified (MDATE): %m/%d/%Y : %H:%M:%S]',
                height: 600,
                image_caption: true,
                quickbars_selection_toolbar: 'bold italic | quicklink h2 h3 blockquote quickimage quicktable',
                noneditable_noneditable_class: "mceNonEditable",
                toolbar_mode: 'sliding',
                contextmenu: "link image imagetools table",
            });
        }

    </script>
}




